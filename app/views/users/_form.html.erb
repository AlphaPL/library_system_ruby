<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> Użytkownik został zablokowany:</h2>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Imię" %><br>
    <%= f.text_field :name, class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label :password, "Hasło" %><br>
    <%= f.password_field :password, class: "form-control"%>
  </div>
  <div class=" input-group">
    <%= f.label :email %><br>
    <%= f.text_field :email,class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label :address, "Adres" %><br>
    <%= f.text_field :address, class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label :phone, "Numer telefonu" %><br>
    <%= f.text_field :phone, class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label :is_admin, "Administrator?" %><br>
    <%= f.check_box :is_admin %>
  </div>
  <div class="actions">
    <%= f.submit 'Dodaj', :class => 'btn btn-primary' %>
  </div>
<% end %>
