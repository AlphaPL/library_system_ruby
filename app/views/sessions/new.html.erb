<% provide(:title, "Logowanie") %>
<div style="margin:0 auto; left:0px; text-align:center;padding:5px 60px 5px 60px">
<p style="margin-top:0px; width:160px;"><%=image_tag("biblioteka.png")%></p>
<h3>Witamy w aplikacji Biblioteka!</h3>
<h4>Zaloguj się, aby z niej skorzystać.</h4>
</div>
<br/>
<br />
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', style="width:250px"%>
      </br>

      <%= f.label :password, "Hasło" %>
      <%= f.password_field :password, class: 'form-control', style="width:250px"%>
      </br>

      <%= f.submit "Zaloguj", class: "btn btn-primary btn-block" %>
      </br>
    <% end %>
    </br>
    <div>
	<h5>
    Jesteś pierwszy raz?<br/><br/>
    <%= link_to 'Rejestracja', signup_path, class: "btn btn-primary", style: "color: #ffffff" %>
	</h5>
     </div>
  </div>
</div>

